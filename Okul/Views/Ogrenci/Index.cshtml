@model IEnumerable<Okul.Models.Ogrenci>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
    ViewBag.AraAdress = "/Ogrenci/Ara";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Yeni öğrenci ", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FistName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TeacherId)
        </th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.FistName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.LastName)
    </td>
    <td>
        @Html.ActionLink(linkText: item.TeacherId.ToString(), actionName: "Details", controllerName: "Ogretmen", routeValues: new {id= item.TeacherId }, htmlAttributes: new { @class = "btn btn-warning" })
    </td>
    <td>
        @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }, new { @class = "btn btn-info" }) |
        @Html.ActionLink("Detay", "Details", new { id = item.Id }, new { @class = "btn btn-secondary" }) |
        @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
    </td>
</tr>
    }

</table>
